{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "name": "Launch Firefox Dev against localhost",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}"
        },
        {
            "type": "firefox",
            "request": "attach",
            "name": "Attach to Firefox Dev",
            "port": 9222,
            "webRoot": "${workspaceRoot}"
        }
    ]
}